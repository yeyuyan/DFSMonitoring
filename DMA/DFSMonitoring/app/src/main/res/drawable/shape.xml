<?xml version="1.0" encoding="UTF-8"?>

<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- to fill in color -->
    <solid android:color="#6495ed" />

    <!-- to set the radius -->
    <corners android:radius="15dip" />

    <!-- to set the padding between text and the edge of the button  -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />
    <solid android:color="#f0ffff" />
</shape>